rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // match /{allPaths=**} {
    //   allow read, write: if request.auth!=null;
    // }
    match /users {
      // Cascade read to any image type at any path
     match /{allUsers=**} {
       allow read;
     }

     // Allow write files to the path "users/*", subject to the constraints:
     // 1) User is the images' owner
     // 2) File is less than or equal to 1MB
     // 3) Content type is an image
     // 4) Uploaded content type matches existing content type (if it exists)
     // 5) File name (stored in imageId wildcard variable) is less than 100 characters
     match /{userId}/{imageId} {
       allow read; 
       allow write: if request.auth.uid == userId
                    && request.resource.size <= 1 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*')
                    && (resource == null || request.resource.contentType == resource.contentType)
                    && imageId.size() <= 100
     }
    }
  }
}
